#!/bin/sh

script_name="install.py"
dir_path=$(dirname "$0")

TEXT_BOLD='\033[1m'
TEXT_INVERTED='\033[7m'
NC='\033[0m' # No Color


echo "
============================================================
üöÄ ${TEXT_BOLD}–†–æ–∫–µ—Ç–±–∞–Ω–∫ ${NC} –¥–ª—è macOS
============================================================
\n
–°–µ–π—á–∞—Å –º—ã –ø—Ä–æ–≤–µ—Ä–∏–º –∏ —É—Å—Ç–∞–Ω–æ–≤–∏–º (–µ—Å–ª–∏ –µ—â–µ –Ω–µ—Ç—É) –Ω—É–∂–Ω–æ–µ –ü–û (brew, python3, pip)
–ï—Å–ª–∏ —á—Ç–æ-—Ç–æ –ø–æ—à–ª–æ –Ω–µ —Ç–∞–∫, –Ω–∞–∂–∏–º–∞–π—Ç–µ Command + Q
\n\n"


chmod +x "$dir_path/../rocketbank.5m.py"
[ -f "$dir_path/../README.md" ] && rm "$dir_path/../README.md"
[ -f "$dir_path/../LICENSE" ] && rm "$dir_path/../LICENSE"
[ -f "$dir_path/../.gitignore" ] && rm "$dir_path/../.gitignore"
[ -f "$dir_path/../LATEST_BUILD.json" ] && rm "$dir_path/../LATEST_BUILD.json"

if ! [[ $(which -a python3) ]]; then
    echo "–ü–∞—Ä—É –º–∏–Ω—É—Ç, –ø–æ–∂–∞–ª—É–π—Å—Ç–∞!"
    if ! [[ $(which -a brew) ]]; then
        yes | ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
        yes | brew doctor
    fi
    yes | brew install python3
fi
if ! [[ $(which -a pip) ]]; then
    python3 get-pip.py
fi
yes | pip3 install requests --quiet
touch "$dir_path/my.cfg"

echo "\n–ì–æ—Ç–æ–≤–æ! –î–∞–≤–∞–π—Ç–µ –∑–Ω–∞–∫–æ–º–∏—Ç—å—Å—è :)\n"

python3 "$dir_path/$script_name"